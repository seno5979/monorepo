{
  "name" : "myfuction",
  "$schema" : "../../node_modules/nx/schemas/project-schema.json",
  "projectType" : "application",
  "sourceRoot" : "functions/myfuction/src",
  "targets" : {
    "build" : {
      "executor" : "@nx/esbuild:esbuild",
      "options" : {
        "outputPath" : "dist/functions/myfuction",
        "main" : "functions/myfuction/src/handler.ts",
        "bundle" : true,
        "platform" : "node"
      }
    },
    "test" : {
      "executor" : "@nx/jest:jest"
    },
    "lint" : {
      "executor" : "@nx/linter:eslint"
    },
    "deploy" : {
      "executor" : "nx:run-commands",
      "dependsOn" : [ "build" ],
      "options" : {
        "command" : "cdk deploy myfuction --require-approval never"
      }
    }
  },
  "tags" : [ "type:function", "scope:backend", "team:publisher-team", "tier:infrastructure" ]
}